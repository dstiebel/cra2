<br>
<br>
<br>
	<h3 class="center-text">Your Results</h3>
<br>
	<h5 class="center-text">Number of results: <b><%=@result.count%></b>, Avarage FICO score: <b><%= @result.pluck(:fico).sum / @result.pluck(:fico).size.to_f%></b>,  Count of types: <b><%=@result.pluck(:type_product).uniq.size%></b></h4>
<br>


<table class="table table-bordered">
   <thead>
     <tr>

       <th>Loan Number</th>
       <th>Product Description</th>
       <th>Type</th>
       <th>Census Tract</th>
       <th>Income Level</th>
       <th>State</th>
       <th>County</th>
       <th>State FIPS</th>
       <th>County FIPS</th>
       <th>Purpose</th>
       <th>Property Type</th>
       <th>FICO</th>
       <th>Application Date</th>
								
     </tr>
   </thead>

   <tbody>
	   	<% 	
	   	@result.each do |result| %>
	      <tr>
	        <td><%=result.loan_number%></td>
	        <td><%=result.product_description%></td>
	        <td><%=result.type_product%></td>
	        <td><%=result.census_tract%></td>
	        <td><%=result.income_level%></td>
	        <td><%=result.state%></td>
	        <td><%=result.county%></td>
	        <td><%=result.state_fips%></td>
	        <td><%=result.county_fips%></td>
	        <td><%=result.purpose%></td>
	        <td><%=result.property_type%></td>
	        <td><%=result.fico%></td>
	        <td><%=result.application_date.strftime("%m/%d/%Y") %></td>
	      </tr>

     	<% end if @result%>
    </tbody>
</table>